#!/bin/bash

#shopt -s dotglob  ## Optionally would allow matches for directories beginning with .
shopt -s nullglob

filter=true;
if [[ ${1:0:2} == -f ]]; then
  shift;
  filter="$1";
  shift;
fi;
test $# == 0 && set -- .;
# recursive tree list
while test $# != 0; do
	test "$1" == "*" && break;
	path=${1/\.\//}
	path=${path%*/}
	$filter "$path" && printf "%s\n" "$path";
	[[ -d "$path" ]] && $0 -f "$filter" "$path"/*;
	shift;
done;

